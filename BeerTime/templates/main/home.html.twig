{% extends 'base.html.twig.' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <div class="card bg-dark text-white">
        <img class="card-img" src="http://static1.squarespace.com/static/5680706ddf40f3468f6ead38/t/568071c605f8e2f75c7995ef/1529538371705/?format=1500w" alt="Card image">
        <div class="card-img-overlay">
        </div>
    </div>
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">{{ title }}</h1>
        <p class="lead">{{ description }}</p>
        <p class="lead">
            <a href="{{ path('event_list') }}" class="btn btn-lg btn-secondary">Check events</a>
        </p>
    </div>

{% endblock %}


