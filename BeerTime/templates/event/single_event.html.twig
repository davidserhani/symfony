{% extends 'base.html.twig' %}

{% block title %}
    {{ event.name }}
{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{ event.poster }}" alt="Generic placeholder image">
        <div class="media-body">
            <h4 class="my-0 font-weight-normal">{% if date() < event.start_at  %}Coming soon{% elseif date('now', 'Europe/Paris') > event.end_at %}Too Late{% else %}Now{% endif %}</h4>
            <h1 class="mt-0">{{ event.name }}</h1>
            <ul class="list-unstyled mt-3 mb-4">
                <li>🍕{{ event.description }}</li>
                <li>🍕{{ event.city }}</li>
                <li>🍕Organize by : {{ event.owner }}</li>
                <li>🍕Price : {{ event.price }}</li>
            </ul>
            <a class="{% if date('now', 'Europe/Paris') > date(event.end_at)%} btn btn-secondary btn-sm disabled {% else %} btn btn-sm btn-block btn-outline-warning {% endif %}" href="{{ path('event_join', {'id':event.id}) }}" >Join</a>
        </div>
    </div>


{% endblock %}