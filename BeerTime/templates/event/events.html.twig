{% extends 'base.html.twig' %}

{% block body %}

    {% for event in events %}
        <div class="card-deck mb-3 text-center">
            <div class="card mb-4 box-shadow">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">{% if date() < event.start_at  %}Coming soon{% elseif date() > event.end_at %}Too Late{% else %}Now{% endif %}</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">{{ event.name }}</h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>ğŸŒ­Start on the {{ event.start_at|date('j F Y \\a\\t H:i') }} till the {{ event.end_at|date('j F Y H:i') }}</li>
                        <li>ğŸŒ­Rockin' {{ event.city }}</li>
                    </ul>
                    <a class="btn btn-lg btn-block btn-outline-warning" href="{{ path('event_show', {'id':event.id}) }}">Check it out</a>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
