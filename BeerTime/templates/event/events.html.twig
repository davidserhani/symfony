{% extends 'base.html.twig' %}

{% block body %}
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">{{ title }}</h1>
        <p class="lead text-muted">Meeting real people in real life creates unique opportunities</p>
        <p>
            <a href="#" class="btn btn-primary my-2">Create an event</a>
        </p>
    </div>
</section>

    <div class="album py-5 bg-light">
    <div class="container">

    <div class="row">
    {% for event in events %}
        <div class="col-md-6">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" data-src="{{ event.poster }}" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">{{ event.name }}</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-warning"><a class="nav-link" href="{{ path('event_show', {'id':event.id}) }}">Check it out</a></button>
                        </div>
                        <small class="text-muted">{% if date('now', 'Europe/Paris') < date(event.start_at)  %}Coming soon{% elseif date('now', 'Europe/Paris') > date(event.end_at)%}Too Late{% else %}Now{% endif %}</small>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}